# Auto detect text files and perform LF normalization
* text=auto

# Swift files
*.swift text eol=lf

# Shell scripts
*.sh text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Documentation
Documentation/** text eol=lf

# Scripts
Scripts/** text eol=lf

# Binary files
*.icns binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.dmg binary

# Xcode files
*.xcodeproj binary
*.xcworkspace binary
*.xcuserstate binary
*.xcuserdata binary

# Build artifacts
.build/** binary
DerivedData/** binary

# Version file
VERSION text eol=lf 