# Actionlint configuration for ODYSSEY
# Ignores acceptable warnings in GitHub Actions workflows

# Disable ShellCheck warnings in embedded scripts (acceptable for automation)
shellcheck: false

# Ignore expression validation warnings (acceptable for complex workflows)
expression-validation: false

# Ignore specific expression validation issues
# The changelog step is properly defined but actionlint doesn't recognize it
ignore:
  - "property.*changelog.*is not defined"
  - "expression.*validation"

# Verbose output for debugging
verbose: true 